{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "rootDir": "src",
    "outDir": "dist",

    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
